<% if current_user.username != @user.username %>
  <h1><%= @user.username %>'s tweets</h1>
<% else %>
  <h1>My tweets</h1>
<% end %>

<ul class="tweet-list">
  <% Tweet.all.each do |tweet| %>
    <% if tweet.user_id == @user.id %>
      <li class="tweet-content"><a href="/tweets/<%= tweet.id %>"><%= tweet.content %></a></li>
    <% end %>
  <% end %>
</ul>

<a class="ui button" href="/tweets/new">Write a tweet</a>
